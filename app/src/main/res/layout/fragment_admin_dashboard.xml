<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F8"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Dashboard Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Dashboard"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:layout_marginBottom="24dp" />

        <!-- Each Metric in Separate Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="12dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/tvTotalLearners"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Learners: 0"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="12dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/tvTotalCoaches"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coaches: 0"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="12dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/tvTotalBookings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bookings: 0"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="12dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/tvTotalReviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reviews: 0"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="12dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/tvTopClass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top Class: -"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="12dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/tvTopCoach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top Coach: -"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="12dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/tvTopLearner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top Learner: -"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="12dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/tvPeakTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peak Time: -"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>

        <!-- Footer Note -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tip: Use the Reports tab to explore all learner and coach activity."
            android:textSize="13sp"
            android:textColor="#888888"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>